[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color8:#222}
foreground = ${xrdb:color15:#444}
foreground-alt = ${xrdb:color2:#444}

primary = ${xrdb:color2:#466349}
secondary = ${xrdb:color10:#e60053}
alert = ${xrdb:color1:#bd2c40}

[section/polybar_common]
height = 26
radius = 6.0
fixed-center = true
padding-right = 1
module-margin-left = 1
module-margin-right = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Fira Code:size=10;1"
font-1 = "Fira Code:size=12:style=Bold;1"
font-2 = "FontAwesome:size=10;1"
font-3 = "Symbola:size=10;1"

cursor-scroll = default
scroll-up = bspwm.prev
scroll-down = bspwm.next
enable-ipc = true

[bar/laptop]
inherit = section/polybar_common
monitor = eDP-1

modules-left = bspwm
modules-center = cpu temperature fanspeed memory 
modules-right = backlight pulseaudio wlan battery date

tray-position = left
tray-offset-x = 10%
tray-padding = 2
tray-detached = true
wm-restack = bspwm

[bar/external]
inherit = section/polybar_common
monitor = ${env:MAIN_MONITOR}

modules-left = bspwm
modules-center = cpu temperature fanspeed memory 
modules-right = external_backlight_first_call external_backlight_ipc pulseaudio wlan battery powermenu date

tray-position = left
tray-offset-x = 10%
tray-padding = 2
tray-detached = true
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; But if you rename your bspwm monitors with bspc -n this option will no longer
; behave correctly.
; Default: true
pin-workspace = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; disabled because the global one is enabled
enable-scroll = false

label-focused = %{T2}%name%%{T1}
label-focused-background = ${colors.primary}
label-focused-padding = 2

label-occupied = %name%
label-occupied-background = ${colors.background-alt}
label-occupied-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 1.0

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
;label-connected = %essid% %downspeed:9%
;label-connected-foreground = #eefafafa

format-connected = <ramp-signal> <label-connected>
label-connected =  %signal%% %upspeed:2% %downspeed:2%

ramp-signal-0 = 
