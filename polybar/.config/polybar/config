[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color8:#222}
foreground = ${xrdb:color15:#444}
foreground-alt = ${xrdb:color2:#444}

primary = ${xrdb:color2:#466349}
secondary = ${xrdb:color10:#e60053}
alert = ${xrdb:color1:#bd2c40}

[bar/top]
monitor = eDP-1

radius = 6.0
fixed-center = true
padding-right = 1
module-margin-left = 1
module-margin-right = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Fira Code:size=10;1"
font-1 = "Symbola:size=10;1"

modules-left = bspwm
modules-center = cpu temperature memory 
modules-right = pulseaudio wlan battery date

[bar/top_external]
monitor = DP-1

width = 100%
height = 20

radius = 6.0
fixed-center = true
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Fira Code:size=10;1"
font-1 = "Symbola:size=10;1"

modules-left = bspwm
modules-center = cpu temperature memory 
modules-right = pulseaudio wlan battery powermenu date

tray-position = right
tray-padding = 2
wm-restack = bspwm
override-redirect = true
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = default

;;tray-background = #0063ff

[module/bspwm]
type = internal/bspwm

pin-workspace = true

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

; Separator in between workspaces
; label-separator = |

