let mapleader = ","
" Plug 'preservim/nerdtree'
" Plug 'tpope/vim-surround'
" Plug 'tpope/vim-commentary'
" Plug 'terryma/vim-multiple-cursors'
" Plug 'godlygeek/tabular'

set listchars=tab:\|\ ,nbsp:路,trail:路
set hlsearch
set incsearch
set easymotion
set surround
set commentary
set number relativenumber
set ideajoin

set switch
let g:switch_definitions = 'group:basic,group:java,group:rspec'
nnoremap <leader>b :Switch<CR>

set listchars=tab:\|\ ,nbsp:路,trail:路


" Have j and k navigate visual lines rather than logical ones
nmap j gj
nmap k gk
" invert <C-o> and <C-i> and move cursor in the top middle of the screed
nnoremap <C-o> <C-i>zz10<C-e>
nnoremap <C-i> <C-o>zz10<C-e>
nnoremap <leader>sv :source ~/.ideavimrc<CR>
nnoremap <leader>ev :edit ~/.ideavimrc<CR>
nnoremap <leader>w :write<CR>
nnoremap <leader>q :close<CR>
" nnoremap zz za
nnoremap ]z zj
nnoremap [z zk
" Remove the stupid storing in the buffer
nnoremap x "_x
nnoremap D "_D
" Yank till the end of the line
nnoremap Y y$
" joinlines with H
nnoremap H J
" move up and down one line
nnoremap J j<C-e>
nnoremap K k<C-y>
" move screen down half page
nnoremap <C-K> <C-u>z.
nnoremap <C-J> <C-d>z.
" easymotion
nmap s <Plug>(easymotion-f)
nmap S <Plug>(easymotion-F)
nmap <leader>f <Plug>(easymotion-prefix)
" tabular
vmap T <Plug>(tabularize)

vnoremap p "_dP

" easymotion mappings

" custom mapping
nnoremap <silent> <Esc> :noh<CR><Esc>
nnoremap vi) va(
nnoremap vi] va[
nnoremap vi} va{

